<p id="notice"><%= notice %></p>

<h1>전체 도서 목록</h1>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>분야</th>
      <th>도서명</th>
      <th>저/역자</th>
      <th>출판사</th>
      <th>수량</th>
      <th>분실</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.genre %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.quantity %></td>
        <td><%= book.lost %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to '상세', book %></td>
        <td><%= link_to '대출', book %></td>
        <td><%= link_to '반납', book %></td>
<!--         <td><%= link_to 'Edit', edit_book_path(book) %></td> -->
<!--         <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

