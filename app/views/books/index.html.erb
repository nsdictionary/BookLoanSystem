<p id="notice"><%= notice %></p>

<h1>전체 도서 목록</h1>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>분야</th>
      <th>도서명</th>
      <th>저/역자</th>
      <th>출판사</th>
      <th>수량</th>
      <th>분실</th>
      <th>대출중</th>
      <th>대출 가능</th>
      <th>ISBN</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <%
	    @loanCount = book.loan_histories.where(return_date: nil).count
	    @canLoanCount = book.quantity - book.lost - @loanCount
	    @myLoanCount = book.loan_histories
	      .where(user_id: current_user.id, return_date: nil).count
	  %>

      <tr>
        <td><%= book.genre %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.quantity %></td>
        <td><%= book.lost %></td>
        <td><%= @loanCount %></td>
        <td><%= @canLoanCount %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to '상세', book %></td>
        <% if @canLoanCount > 0 %>
          <% if @myLoanCount == 0 %>
		    <td><%= link_to '대출',
	        loan_histories_url(
	        	:user_id => current_user.id,
	        	:book_id => book.id,
	        	:loan_date => '2016-01-01',
	        	:return_date => '2016-01-01'
	        ), method: :post%></td>
		  <% else %>
		    <td><font color='red'>현재 대출중</font></td>
		  <% end %>
		<% else %>
		  <td><font color='red'>대여 불가</font></td>
		<% end %>
        <td><%= link_to '반납', book, method: :post, data: { confirm: '정말로 반납 하시겠습니까?' } %></td>
<!--         <td><%= link_to 'Edit', edit_book_path(book) %></td> -->
<!--         <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

